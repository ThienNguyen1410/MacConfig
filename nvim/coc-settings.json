{

    "languageserver": {
        "kotlin": {
            "command": "~/lsp/server/bin/kotlin-language-server",
            "filetypes": ["kotlin"]
        },
  },
    "suggest.noselect": false,
    "suggest.autoTrigger":"always",
    "highlight.colors.enable": true,
    "highlight.colorNames.enable": true,
    "prettier.bracketSpacing": true,
    "coc.preferences.formatOnType": true,
    "diagnostic.enable": true,

    "explorer.icon.enableNerdfont": true,
    "explorer.icon.source": "vim-devicons",
    "explorer.width": 65,
    "explorer.previewAction.onHover": false,
    "explorer.floating.border.chars": [
        "┌",
        "─",
        "┐",
        "│",
        "┘",
        "─",
        "└",
        "│"
    ],
    "explorer.keyMappings.global": {
        "i": "nodePrev",
        "k": "nodeNext",
        "j": "collapse",
        "h": false,
        "gh": false,
        "gj": "collapseRecursive",
        "<cr>": ["expandable?", "expand", "open"],
        "<space>": "toggleSelection"
    },
    "explorer.git.enable": true,
    "explorer.git.icon.status.modified": "M",

    "python.linting.enabled": true,
    "python.jediEnabled": true,
    "python.pythonPath": "/opt/homebrew/bin/python3.10",

    "prettier.tabWidth": 4,
    "coc.preferences.jumpCommand": "drop",
    "java.import.gradle.java.home": "/Library/Java/JavaVirtualMachines/jdk-16.0.2.jdk/Contents/Home"


}
